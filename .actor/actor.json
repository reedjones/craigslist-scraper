{
  "actorSpecification": 1,
  "name": "apify-craigslist",
  "title": "Actor for gathering data from Craigslist",
  "description": "Displays current input (Hello World)",
  "version": "0.0.1",
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "title": "posts",
      "views": {
        "posts": {
          "title": "posts",
          "transformation": {
            "fields": ["title", "content"]
          },
          "display": {
            "component": "table",
            "columns": [
              {
                "label": "content",
                "format": "string",
                "field": "content"
              },
              {
                "label": "title",
                "format": "string",
                "field": "title"
              }
          
            ]
          }
        }
      }
    }
  }
}
